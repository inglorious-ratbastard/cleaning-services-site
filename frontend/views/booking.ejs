<!DOCTYPE html>
<html>
<%- include('./partials/head.ejs') %> 
<body>

<%- include('./partials/nav.ejs') %>

 <div class="container">
   <h6 class="center-align" style="margin-top: 60px"><span class="soon">Schedule Your Cleaning Routine</span></h6>
</div> 

<div class="valign-wrapper" style="margin-top: 60px;">
 <div class="row">
    <form method="POST" action="/getDate" class="col s12">

      <div class="row">
        <div class="input-field col s12">
        <input id="date" type="text" name="date" class="datepicker center-align col s12" placeholder="Select/Book a Date">
        </div>
      </div>
      <div class="row">
        <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
          <input id="first_name" type="text" class="validate" name="first">
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
          <input id="last_name" type="text" class="validate" name="last">
          <label for="last_name">Last Name</label>
        </div>
      </div>
    
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">phone</i>
          <input id="icon_telephone" type="tel" class="validate" name="phone">
          <label for="icon_telephone">Phone Number</label>
        </div>
        <div class="input-field col s6">
        <select name="square">
         <option value="" disabled selected>Approx. Sq. Ft.</option>
         <option value="700-1000">700 - 1000 sq. ft.</option>
         <option value="1000-2000">1000 - 2000 sq ft.</option>
         <option value="2000-3000">2000 - 3000 sq ft.</option>
         <option value="300-4000">3000 - 4000 sq ft.</option>
         <option value="Other">- other size or type of property -</option>
        </select>
        <label>Select the Size of Your Property</label>
        </div> 
      </div> 
      
      <div class="row">
        <form class="col s12">
        <div class="row">
          <div class="input-field col s12">
          <i class="material-icons prefix">home</i>
            <textarea id="textarea1" class="materialize-textarea" name="address"></textarea>
            <label for="textarea1">Resedential or Commercial Address</label>
          </div>
        </div>
      </div>

      <div class="row"> 
        <div class="input-field col s12">
          <i class="material-icons prefix">email</i>
          <input id="email" type="email" class="validate" name="email">
          <label for="email">Email Address</label>
          <center>Confirmation of Services / Receipt Will Be Sent</center>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <textarea id="textarea1" class="materialize-textarea" data-length="350" name="comment"></textarea>
          <label for="textarea1">Comments</label>
        </div>
      </div> 
      
      <div class="row center-align">
      <button class="waves-effect waves-light btn" type="submit" name="action">Submit</button>
     
    </form>
  </div>
</div> 

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script> 

<%- include('./partials/scripts.ejs') %>

</body>
</html>